{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "outDir": "build",
    "strict": false,
    "target": "ES2018",
    "declaration": true,
    "declarationDir": "build/types",
    "useDefineForClassFields": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
