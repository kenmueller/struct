{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "standard",
    "prettier/standard",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "es6": true,
    "es2020": true,
    "node": true
  },
  "overrides": [
    {
      "files": "**/*.{test,spec}.{js,ts}",
      "env": {
        "jest": true
      }
    }
  ]
}
